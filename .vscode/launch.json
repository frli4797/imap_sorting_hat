{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "ISH learn",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/ish.app.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "-l"
      ],
      "env": {
        "ISH_CONFIG_PATH": "${workspaceFolder}/.ish",
        "ISH_DEBUG": "True",
        "ISH_DAEMON": "True"
      }
    },
    {
      "name": "ISH",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/ish/app.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "-v"
      ],
      "env": {
        "ISH_CONFIG_PATH": "dummy"
      }
    },
    {
      "name": "Run ish (module)",
      "type": "debugpy",
      "request": "launch",
      "module": "ish.app",
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "args": [
        "-v",
        "-D",
        "-l"
      ]
    },
    {
      "name": "Migrator",
      "type": "debugpy",
      "request": "launch",
      "module": "ish.migrate_shelve_to_sql",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        //"--dry-run"
      ]
    }
  ]
}